<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:vm="clr-namespace:Indiko.Maui.Controls.Chips.Sample.ViewModels"
			 xmlns:models="clr-namespace:Indiko.Maui.Controls.Chips.Sample.Models"
             xmlns:idk="clr-namespace:Indiko.Maui.Controls.Chips;assembly=Indiko.Maui.Controls.Chips"
             x:Class="Indiko.Maui.Controls.Chips.Sample.MainPage"
			 x:DataType="vm:MainPageViewModel"
             Title="Indiko.Maui.Controls.Chips.Sample">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Chips View" FontSize="Header" TextColor="{StaticResource Primary}"></Label>

            <idk:ChipsView AlignContent="Start" ItemSource="{Binding Chips}" Size="30" Spacing="2"
                   JustifyContent="Start" Wrap="Wrap">
            </idk:ChipsView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
